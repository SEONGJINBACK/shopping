<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.seongjin.shopping.clothing.mapper.ClothingMapper">


    <select id="shirtList" resultMap="shirtListMap">
        SELECT
            ROW_NUM ,
            ROT_NUM ,
            PRODUCT_NAME ,
            PRODUCT_SIZE ,
            PRODUCT_PRICE ,
            PRODUCT_COLOR ,
            PRODUCT_IMAGE
        FROM TSHIRT
    </select>

    <resultMap id="shirtListMap" type="com.seongjin.shopping.clothing.to.TshirtTO">
        <result property="rowNum" column="ROW_NUM"></result>
        <result property="rotNum" column="ROT_NUM"></result>
        <result property="productName" column="PRODUCT_NAME"></result>
        <result property="productSize" column="PRODUCT_SIZE"></result>
        <result property="productColor" column="PRODUCT_PRICE"></result>
        <result property="productPrice" column="PRODUCT_COLOR"></result>
        <result property="productImage" column="PRODUCT_IMAGE"></result>
    </resultMap>
</mapper>